                                        <Grid HeightRequest="100" Padding="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="8*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0"
                                                   Text="{Binding CreatedDate}"
                                                   FontSize="15" TextColor="Black"
                                                   VerticalTextAlignment="Center"
                                                   HorizontalTextAlignment="Center"
                                                   BackgroundColor="White"/>
                                            <BoxView Grid.Column="1" BackgroundColor="#f0f0f0" WidthRequest="2"
                                                     HorizontalOptions="Start"/>
                                            <StackLayout Grid.Column="1">
                                                <Label Text="{Binding FullName}"
                                                       FontSize="18" FontAttributes="Bold"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="CenterAndExpand"
                                                       TextColor="Black"/>

                                                <Label Text="{Binding CallDuration}"
                                                       FontSize="14"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="End"
                                                       TextColor="#6a6a6a"/>
                                            </StackLayout>
                                            <Label Grid.Column="2"
                                                   Text="{Binding CallInfoId , StringFormat='Call ID {0}'}"
                                                   HorizontalTextAlignment="Center"
                                                   VerticalOptions="StartAndExpand"
                                                   FontSize="14"/>
                                        </Grid>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Footer>
                            <StackLayout />
                        </ListView.Footer>
                    </ListView>

                    
                </Grid>

            </StackLayout>
            <ActivityIndicator IsRunning="True" IsVisible="{Binding IsLoading}"
                               HorizontalOptions="CenterAndExpand"
                               VerticalOptions="CenterAndExpand"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>

