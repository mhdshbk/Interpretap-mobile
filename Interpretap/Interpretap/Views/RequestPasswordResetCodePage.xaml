<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interpretap.Views.RequestPasswordResetCodePage"
             Title="Request code">
    <ContentPage.Content>

        <AbsoluteLayout>

            <StackLayout 
                AbsoluteLayout.LayoutFlags="All" 
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                Padding="10"
                VerticalOptions="CenterAndExpand">

                <Label Text="Username"/>
                <Entry 
                    Placeholder="Username" 
                    Text="{Binding Username}"/>

                <BoxView HeightRequest="10" BackgroundColor="Transparent"/>

                <Button 
                    Text="Get code" 
                    Command="{Binding SendForgotPasswordCommand}"
                    IsEnabled="{Binding CanExecuteSendForgotPasswordCommand}"/>
            </StackLayout>

            <ActivityIndicator
                IsVisible="{Binding IsProcessing}"
                IsRunning="True"
                x:Name="ActivityIndicator"
                AbsoluteLayout.LayoutFlags="PositionProportional"  
                AbsoluteLayout.LayoutBounds="0.5,0.5"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>